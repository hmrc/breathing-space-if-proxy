{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "debts",
  "description": "Schema of Debts",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "chargeReference": {
        "type": "string"
      },
      "chargeType": {
        "type": "string"
      },
      "chargeAmount": {
        "type": "number"
      },
      "chargeCreationDate": {
        "type": "string",
        "pattern": "^(((20)([2468][048]|[13579][26]|0[48])|2000)[-]02[-]29|((20)[0-9]{2}[-](0[469]|11)[-](0[1-9]|1[0-9]|2[0-9]|30)|(20)[0-9]{2}[-](0[13578]|1[02])[-](0[1-9]|[12][0-9]|3[01])|(20)[0-9]{2}[-]02[-](0[1-9]|1[0-9]|2[0-8])))$",
        "example": "2020-01-25"
      },
      "chargeDueDate": {
        "type": "string",
        "pattern": "^(((20)([2468][048]|[13579][26]|0[48])|2000)[-]02[-]29|((20)[0-9]{2}[-](0[469]|11)[-](0[1-9]|1[0-9]|2[0-9]|30)|(20)[0-9]{2}[-](0[13578]|1[02])[-](0[1-9]|[12][0-9]|3[01])|(20)[0-9]{2}[-]02[-](0[1-9]|1[0-9]|2[0-8])))$",
        "example": "2020-01-25"
      },
      "utrAssociatedWithCharge": {
        "type": "string"
      }
    },
    "required": [
      "chargeReference", "chargeType", "chargeAmount", "chargeCreationDate", "chargeDueDate"
    ]
  }
}
